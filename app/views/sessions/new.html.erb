<h1>Login</h1>

<div align='left'>
  <%= form_with url: login_path, data: {turbo: false} do |form| %>
    <div class='mb-3'>
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control', placeholder: 'email@email.com' %>
    </div>
    <div class='mb-3'>
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control', placeholder: 'password' %>
      <%= link_to 'Forgot your password?', password_reset_path %>
    </div>

    <div class='mb-3'>
      <%= form.submit 'Login', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>